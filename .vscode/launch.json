    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Launch via NPM",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start:debug"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}